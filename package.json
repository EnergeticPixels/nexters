{
  "name": "nexter",
  "version": "0.0.1",
  "description": "Using CSS Grids and SASS to develop a responsive website.",
  "private": true,
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss styles/style.css -w --recursive --use-polling --polling-interval 1000",
    "devserver": "live-server --port=8081 --browser=CHROME --verbose",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss styles/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' styles/style.comp.css -o styles/style.prefix.css",
    "compress:css": "node-sass styles/style.prefix.css styles/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Anthony Jackman",
  "license": "MIT ",
  "devDependencies": {
    "autoprefixer": "^9.7.1",
    "concat": "^1.0.3",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3"
  }
}
